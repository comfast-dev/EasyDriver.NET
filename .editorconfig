[*]
charset = utf-8
end_of_line = crlf
indent_size = 4
indent_style = space
insert_final_newline = false
max_line_length = 120
tab_width = 4
trim_trailing_whitespace = false
ij_continuation_indent_size = 8
ij_formatter_off_tag = @formatter:off
ij_formatter_on_tag = @formatter:on
ij_formatter_tags_enabled = true
ij_smart_tabs = false
ij_visual_guides =
ij_wrap_on_typing = false

[*.feature]
indent_size = 2

# Microsoft .NET properties
csharp_indent_braces = false
csharp_new_line_before_catch = false
csharp_new_line_before_else = false
csharp_new_line_before_members_in_object_initializers = false
csharp_new_line_before_open_brace = accessors, control_blocks, events, indexers, properties
csharp_preferred_modifier_order = public, private, protected, internal, file, override, static, abstract, virtual, sealed, readonly, new, extern, unsafe, volatile, async, required:suggestion

# ReSharper properties
resharper_braces_for_foreach = required
resharper_braces_redundant = false
resharper_csharp_allow_comment_after_lbrace = true
resharper_csharp_empty_block_style = together
resharper_csharp_max_line_length = 123
resharper_csharp_other_braces = end_of_line
resharper_csharp_remove_blank_lines_near_braces_in_code = false
resharper_csharp_remove_blank_lines_near_braces_in_declarations = false
resharper_csharp_wrap_before_binary_opsign = true
resharper_instance_members_qualify_declared_in =
resharper_keep_existing_attribute_arrangement = true
resharper_keep_existing_expr_member_arrangement = true
resharper_parentheses_redundancy_style = remove
resharper_place_expr_method_on_single_line = true
resharper_place_method_attribute_on_same_line = true
resharper_place_simple_enum_on_single_line = true
resharper_place_simple_initializer_on_single_line = false
resharper_place_simple_list_pattern_on_single_line = false
resharper_wrap_chained_binary_expressions = chop_if_long
resharper_wrap_enum_declaration = wrap_if_long
resharper_wrap_object_and_collection_initializer_style = chop_always
